<?xml version="1.0" encoding="UTF-8"?>
<process_model name="Waterfall Model" domain="Software Engineering">
  <phases>
    <phase id="requirements" name="Requirements Analysis">
      <description>收集并分析系统需求</description>
      <outcome>需求规格说明书</outcome>
    </phase>
    <phase id="design" name="System Design">
      <description>基于需求进行系统架构设计</description>
      <outcome>设计文档</outcome>
    </phase>
    <phase id="implementation" name="Implementation">
      <description>编写代码实现系统</description>
      <outcome>可执行的软件</outcome>
    </phase>
    <phase id="verification" name="Testing">
      <description>测试系统是否符合需求</description>
      <outcome>测试报告</outcome>
    </phase>
    <phase id="maintenance" name="Maintenance">
      <description>修复问题并适应新需求</description>
      <outcome>更新后的系统</outcome>
    </phase>
  </phases>
  <transitions>
    <transition from="requirements" to="design" condition="需求文档评审通过"/>
    <transition from="design" to="implementation" condition="设计文档评审通过"/>
    <transition from="implementation" to="verification" condition="代码开发完成"/>
    <transition from="verification" to="maintenance" condition="测试通过"/>
  </transitions>
</process_model>